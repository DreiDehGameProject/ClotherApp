<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="bullshit.clother.Profile"
    android:background="@drawable/model_startscreen">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tUsername"
        android:layout_below="@+id/lUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#ffe7e7e7"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/tUsername"
        android:layout_alignParentStart="true"
        android:id="@+id/lPassword"
        android:layout_marginBottom="15dp"/>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tPassword"
        android:layout_below="@+id/lPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#ffe7e7e7"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold"

        android:id="@+id/bLogin"
        android:layout_below="@+id/tPassword"
        android:layout_centerHorizontal="true"
        android:background="#ff9dce58"
        android:textColor="#ffffffff"
        android:onClick="openStartScreen" />

    <TextView
        android:id="@+id/lUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:text="Username"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
